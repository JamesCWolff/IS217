extends layout

block content
  h1= title
  br
  form(id='storeForm' ,action='/', method='post')
   label= "Screen Size"
    br
    input(type='radio', name='screenSize', value='11 inches', checked)
   | 11 inches
   br
   label
    input(type='radio', name='screenSize', value='15 inches')
   | 15 inches $200
   br
   br
   label= "Hard Drive"
    br
    input(type='radio', name='hardDrive', value='128GB', checked)
   | 128GB
   br
   label
    input(type='radio', name='hardDrive', value='256GB')
   | 256GB $200
   br
   br
   label= "Memory Size"
    br
    input(type='radio', name='memorySize', value='8GB', checked)
   | 8GB
   br
   label
    input(type='radio', name='memorySize', value='16GB')
   | 16GB $200
   br
   br
   h1= "your total comes to: $" + 1000
   input(type='submit', value='Order')